@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="button-items">
    <a asp-action="Registro" class="btn btn-primary">Registrar un Nuevo Banco</a>
</div>

<div class="row">
    <div class="col-12">
        <h4 class="my-3">Listado de Bancos</h4>
        <div class="card-group">
            <div class="card mb-4">
                <img class="card-img-top img-fluid" src="~/assets/images/bancos/BN.png" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">Banco Nacional</h4>
                    <a class="btn btn-secondary">Detalle</a>
                    <p class="card-text">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </p>
                </div>
            </div>
            <div class="card mb-4">
                <img class="card-img-top img-fluid" src="~/assets/images/bancos/BP.png" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">Banco Popular</h4>
                    <a class="btn btn-secondary">Detalle</a>
                    <p class="card-text">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </p>
                </div>
            </div>
            <div class="card mb-4">
                <img class="card-img-top img-fluid" src="~/assets/images/Bancos/BAC.png" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">BAC San José</h4>
                    <a class="btn btn-secondary">Detalle</a>
                    <p class="card-text">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>