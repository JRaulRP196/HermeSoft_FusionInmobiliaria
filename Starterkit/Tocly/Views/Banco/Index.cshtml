@model IEnumerable<HermeSoft_Fusion.Models.Banco>

@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="button-items mb-3">
        <a asp-controller="Banco" asp-action="Registro" class="btn btn-primary">
            Registrar un Nuevo Banco
        </a>
    </div>

    @if (TempData["OK"] != null)
    {
        <div class="alert alert-success">@TempData["OK"]</div>
    }

    <div class="row g-3">
        <div class="col-12">
            <h4 class="my-2">Listado de Bancos</h4>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info mb-0">
                    No hay bancos registrados todavía.
                </div>
            </div>
        }
        else
        {
            foreach (var b in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card rounded-3 h-100">
                        <img src="@(string.IsNullOrWhiteSpace(b.logo) ? Url.Content("~/assets/images/bancos/BAC.png") : b.logo)"
                             class="card-img-top rounded-4"
                             style="height:180px; object-fit:cover;"
                             alt="Logo @b.nombre" />

                        <div class="card-body">
                            <h4 class="card-title">@b.nombre</h4>

                            <small class="text-muted d-block text-truncate" title="@b.enlace">
                                @b.enlace
                            </small>

                            <div class="mt-3">
                                <a class="btn btn-sm btn-outline-primary" href="@b.enlace" target="_blank">Web</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Detalle" asp-route-id="@b.idBanco">Detalle</a>
                                <a class="btn btn-sm btn-outline-warning"
                                   asp-controller="Banco"
                                   asp-action="Editar"
                                   asp-route-id="@b.idBanco">
                                    Editar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>
