@model HermeSoft_Fusion.Models.Banco

@{
    ViewBag.Title = "Detalle del Banco";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var endeudamientos = ViewBag.Endeudamientos as IEnumerable<dynamic> ?? new List<dynamic>();
    var seguros = ViewBag.Seguros as IEnumerable<dynamic> ?? new List<dynamic>();
    var escenarios = ViewBag.Escenarios as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Detalle del Banco</h4>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-3">
                    <img src="@(string.IsNullOrWhiteSpace(Model.logo) ? Url.Content("~/assets/images/bancos/BAC.png") : Model.logo)"
                         class="img-fluid rounded" alt="Logo @Model.nombre" />
                </div>
                <div class="col-md-9">
                    <h4 class="mb-1">@Model.nombre</h4>
                    <div class="text-muted">@Model.enlace</div>

                    <div class="row mt-3">
                        <div class="col-md-4"><b>Plazo máximo:</b> @Model.maxCredito años</div>
                        <div class="col-md-4"><b>Comisión:</b> @Model.comision %</div>
                        <div class="col-md-4"><b>Honorario abogado:</b> @Model.honorarioAbogado %</div>
                        <div class="col-md-4 mt-2"><b>Tipo cambio:</b> @Model.tipoCambio</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5>Endeudamientos máximos</h5>
                    @if (!endeudamientos.Any())
                    {
                        <div class="text-muted">No hay endeudamientos registrados.</div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var e in endeudamientos)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@e.Tipo</span>
                                    <span>@e.Porcentaje %</span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5>Seguros</h5>
                    @if (!seguros.Any())
                    {
                        <div class="text-muted">No hay seguros asociados.</div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var s in seguros)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@s.Seguro</span>
                                    <span>@s.Porcentaje %</span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5>Escenarios de tasa</h5>
                    @if (!escenarios.Any())
                    {
                        <div class="text-muted">No hay escenarios registrados.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Escenario</th>
                                        <th>Tasa</th>
                                        <th>Plazo</th>
                                        <th>Adic.</th>
                                        <th>Dato</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in escenarios)
                                    {
                                        <tr>
                                            <td>@x.Escenario</td>
                                            <td>@x.Tasa</td>
                                            <td>@x.Plazo</td>
                                            <td>@x.Adicional</td>
                                            <td>@x.Dato</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

</div>
