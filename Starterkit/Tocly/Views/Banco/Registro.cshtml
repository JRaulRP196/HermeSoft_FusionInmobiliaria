@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Registro de Bancos</h4>
                <p class="card-title-desc">
                    En este apartado se podrán registrar nuevos bancos completando el siguiente formulario.
                </p>
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="validationCustom01" class="form-label">Nombre del Banco</label>
                                <input type="text" class="form-control" id="validationCustom01"
                                       placeholder="Nombre del Banco" value="BAC SAN JOSE" required>
                                <div class="valid-feedback">
                                    Excelente!
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="validationCustom02" class="form-label">Enlace Web del Banco</label>
                                <input type="text" class="form-control" id="validationCustom02"
                                       placeholder="Last name" value="https://www.baccredomatic.com/es-cr?bacid=CRIN-MULT-ACF-000007-GL-AW-PR-GG-B5-SR-00000/SEARCH-VEL-INSTITUCIONAL-VENTAS&gad_source=1&gad_campaignid=15141072188&gbraid=0AAAAADg3AmLnGQMM-_Fg3fr91v77582eD&gclid=CjwKCAiAlrXJBhBAEiwA-5pgwigpomiEcUJgwG7IEazLimy7CmxbnAPDoBRQE0rcKv8xdtPwFSXb6xoCKv8QAvD_BwE" required>
                                <div class="valid-feedback">
                                    Excelente!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="validationCustom03" class="form-label">Logo del Banco</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" id="validationCustom03" required="">
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese un valor válido.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="validationCustom04" class="form-label">Plazo Máximo de Crédito</label>
                                <input type="number" class="form-control" id="validationCustom04"
                                       placeholder="Plazo Máximo de Crédito en Años" required>
                                <div class="invalid-feedback">
                                    Ingrese un valor válido.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="validationCustom05" class="form-label">Comisión Bancaria</label>
                                <input type="number" class="form-control" id="validationCustom05"
                                       placeholder="%" required>
                                <div class="invalid-feedback">
                                    Ingrese un valor válido.
                                </div>
                            </div>
                        </div>

                        <label for="validationCustom05" class="form-label">Porcentaje de Endeudamiento Máximo</label>
                        
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Público</div>
                                    <input type="number" class="form-control" placeholder="%" required="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Privado</div>
                                    <input type="number" class="form-control" placeholder="%" required="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Profesional Independiente</div>
                                    <input type="number" class="form-control" placeholder="%" required="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Trabajador Independiente</div>
                                    <input type="number" class="form-control" placeholder="%" required="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Seguro de Protección al Desempleado</label>
                                <input type="number" class="form-control" placeholder="%" value="" required>
                                <div class="valid-feedback">
                                    Excelente!
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Seguro de Vida</label>
                                <input type="number" class="form-control" placeholder="%" value="" required>
                                <div class="valid-feedback">
                                    Excelente!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label class="form-label">Gastos de Honorarios de Abogados</label>
                            <input type="number" class="form-control" placeholder="%" required>
                            <div class="valid-feedback">
                                Excelente!
                            </div>
                        </div>
                    </div>

                    <label class="form-label">Tasas de Interes</label> <br />
                    <label class="form-label">Escenarios: </label>
                    <button type="button" class="btn btn-primary" id="addEscenario">+</button>
                    <div id="listaEscenarios">
                    <div class="row escenarios">

                        <div class="col">
                            <div class="card card-body">
                                <h3 class="card-title">Escenario #1</h3>

                                <div class="row">
                                    <div class="col-md-9">
                                        <label class="form-label">Tipo de Tasa de Interes</label>
                                        <select class="form-select tipoInteres" required>
                                            <option value="Tasa_Variable">Tasa Variable</option>
                                            <option value="Tasa_Escalonada">Tasa Escalonada</option>
                                        </select>
                                    </div>
                                </div>
                                <br />
                                <div class="row inputsEscenario">
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Plazo de Duración</label>
                                            <input type="number" class="form-control" placeholder="Meses" required>
                                            <div class="valid-feedback">
                                                Excelente!
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Porcentaje Adicional del Banco</label>
                                            <input type="number" class="form-control" placeholder="%" required>
                                            <div class="valid-feedback">
                                                Excelente!
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Indicador Bancario</label>
                                            <select class="form-select" required>
                                                <option value="1">TBP</option>
                                                <option value="2">SOFT</option>
                                                <option value="3">TPR</option>
                                                <option value="4">N/A</option>
                                            </select>
                                            <div class="valid-feedback">
                                                Excelente!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <div class="button-items botonesEscalonada"></div>
                            </div>
                        </div>
                        </div>
                    </div>
                        <!--Este es el template para clonar-->
                        <div class="row escenarios" id="escenario-template" style="display:none;">
                            <div class="col">
                                <div class="card card-body">
                                    <h3 class="card-title">Escenario #x</h3>
                                    <button type="button" class="btn btn-danger waves-effect waves-light deleteEscenario">
                                        <i class="ri-close-line align-middle me-2"></i> Eliminar Escenario
                                    </button>
                                    <div class="row">
                                        <div class="col-md-9">
                                            <label class="form-label">Tipo de Tasa de Interes</label>
                                            <select class="form-select tipoInteres" required>
                                                <option value="Tasa_Variable">Tasa Variable</option>
                                                <option value="Tasa_Escalonada">Tasa Escalonada</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row inputsEscenario">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Plazo de Duración</label>
                                                <input type="number" class="form-control" placeholder="Meses" required>
                                                <div class="valid-feedback">
                                                    Excelente!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Porcentaje Adicional del Banco</label>
                                                <input type="number" class="form-control" placeholder="%" required>
                                                <div class="valid-feedback">
                                                    Excelente!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Indicador Bancario</label>
                                                <select class="form-select" required>
                                                    <option value="1">TBP</option>
                                                    <option value="2">SOFT</option>
                                                    <option value="3">TPR</option>
                                                    <option value="4">N/A</option>
                                                </select>
                                                <div class="valid-feedback">
                                                    Excelente!
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        <div class="button-items botonesEscalonada"></div> 
                                </div>
                            </div>

                    </div>


                    <div>
                        <div class="button-items">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- end card -->
    </div> <!-- end col -->
@section scripts{

        <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>

        <script src="~/assets/js/pages/form-validation.init.js"></script>

        <script src="~/assets/js/escenariosbanco.js"></script>
}
