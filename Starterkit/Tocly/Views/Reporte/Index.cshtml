@{
    ViewData["Title"] = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!-- Selector de Condominios -->
<div class="card border-0 shadow-sm rounded-4 mb-4 p-3">
    <div class="d-flex justify-content-center align-items-center gap-3">

        <!-- Botón Anterior -->
        <button id="btnPrevCondominio" class="btn btn-outline-primary rounded-pill px-3">
            <i class="fas fa-chevron-left"></i>
        </button>

        <!-- Nombre del Condominio -->
        <div class="flex-grow-1 text-center">
            <h4 id="nombreCondominio" class="fw-bold mb-0">Nombre Condominio</h4>
        </div>

        <!-- Botón Siguiente -->
        <button id="btnNextCondominio" class="btn btn-outline-primary rounded-pill px-3">
            <i class="fas fa-chevron-right"></i>
        </button>

    </div>
</div>

<div class="col-12">
    <div class="card">
        <div class="card-header border-0 d-flex justify-content-between align-items-center px-4 pt-4 rounded-4">
            <h4>Condominio</h4>
            <div class="d-flex align-items-center gap-3 flex-wrap flex-md-nowrap">
                <select class="form-select w-auto w-100 w-md-auto" id="filtro">
                    <option value="-1" hidden selected>Filtros</option>
                    <option value="Ventas_Mes">Ventas Mes</option>
                    <option value="Disponibilidad">Disponibilidad</option>
                </select>

                <button class="btn btn-outline-secondary btn-sm px-3 w-100 w-md-auto">
                    Descargar
                </button>
            </div>

        </div>
        <div class="card-body">
            <div id="map" style="height: 350px"></div>
        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>

@section scripts{
    <script src="~/assets/js/mapas.js"></script>
    <script src="~/assets/js/app.js"></script>
}