@{
    ViewBag.Title = "Registrar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="row">
    <div class="col">
        <div class="card border-0 shadow-sm rounded-4 p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold">Registro de Venta</h4>
                <a href="/Ventas/Index" class="btn btn-light border"><i class="fas fa-arrow-left me-2"></i> Volver</a>
            </div>

            <form id="ventaForm" class="needs-validation" novalidate>

                <!-- Bloque superior: Cliente, Lote, Asesor, Fecha, Moneda -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Cliente *</label>
                        <select id="cliente" class="form-select" required>
                            <option value="" selected disabled>Seleccione cliente</option>
                            <option value="juan.perez@correo.com">Juan Pérez - juan.perez@correo.com</option>
                            <option value="ana.rodriguez@correo.com">Ana Rodríguez - ana.rodriguez@correo.com</option>
                        </select>
                        <div class="invalid-feedback">Seleccione un cliente válido.</div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Lote (disponible) *</label>
                        <select id="lote" class="form-select" required>
                            <option value="" selected disabled>Seleccione lote</option>
                            <option value="Lote-001" data-estado="Disponible" data-precio="35000000">Lote-001 - Proyecto Vista (Disponible) - ₡35,000,000</option>
                            <option value="Lote-002" data-estado="Disponible" data-precio="42000000">Lote-002 - Proyecto Sol (Disponible) - ₡42,000,000</option>
                            <option value="Lote-003" data-estado="Vendido" data-precio="28000000">Lote-003 - Proyecto Lago (Vendido)</option>
                        </select>
                        <div class="invalid-feedback">Seleccione un lote disponible.</div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Asesor (sesión) *</label>
                        <input type="email" id="asesor" class="form-control" value="asesor.ventas@firma.com" required>
                        <div class="invalid-feedback">Correo del asesor.</div>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Fecha de Venta *</label>
                        <input type="date" id="fechaVenta" class="form-control" required>
                        <div class="invalid-feedback">Ingrese la fecha de la venta.</div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Moneda *</label>
                        <select id="moneda" class="form-select" required>
                            <option value="CRC" selected>Colones (₡)</option>
                            <option value="USD">Dólares ($)</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Banco (plan de pago) *</label>
                        <select id="banco" class="form-select" required>
                            <option value="" selected disabled>Seleccione banco</option>
                            <option value="BAC" data-plan-vigente="true">BAC - Plan Vigente</option>
                            <option value="BNCR" data-plan-vigente="false">BNCR - Plan No Vigente</option>
                        </select>
                        <div class="invalid-feedback">Seleccione un banco con plan vigente.</div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Tipo de asalariado *</label>
                        <select id="tipoAsalariado" class="form-select" required>
                            <option value="" selected disabled>Seleccione</option>
                            <option value="Privado">Privado</option>
                            <option value="Publico">Público</option>
                            <option value="Independiente">Profesional Independiente</option>
                        </select>
                        <div class="invalid-feedback">Seleccione tipo de asalariado.</div>
                    </div>
                </div>

                <!-- SECCIÓN: Prima -->
                <div class="card border-0 shadow-sm rounded-3 p-3 mb-3">
                    <h5 class="mb-2">Prima</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">% Prima *</label>
                            <input type="number" id="porcPrima" class="form-control" min="0" max="100" value="10" required>
                            <div class="invalid-feedback">Ingrese % de prima válido.</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Fecha de vencimiento de prima *</label>
                            <input type="date" id="fechaPrima" class="form-control" required>
                            <div class="invalid-feedback">Ingrese fecha de prima.</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Desglose Prima (automático)</label>
                            <input type="text" id="desglosePrima" class="form-control" disabled placeholder="Se calculará automáticamente">
                        </div>
                    </div>
                </div>

                <!-- SECCIÓN: Gasto de formalización -->
                <div class="card border-0 shadow-sm rounded-3 p-3 mb-3">
                    <h5 class="mb-2">Gastos de Formalización</h5>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">% Seguros</label>
                            <input type="number" id="porcSeguros" class="form-control" min="0" max="100" value="3">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">% Honorarios abogados</label>
                            <input type="number" id="porcAbogados" class="form-control" min="0" max="100" value="7">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">% Comisión bancaria</label>
                            <input type="number" id="porcComision" class="form-control" min="0" max="100" value="5">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">% Timbre fiscal</label>
                            <input type="number" id="porcTimbre" class="form-control" min="0" max="100" value="0.5">
                        </div>

                        <div class="col-12">
                            <button type="button" id="calcGastoFormal" class="btn btn-outline-primary">Calcular gasto de formalización</button>
                            <input type="text" id="gastoFormalizacion" class="form-control mt-2" disabled placeholder="Resultado gasto de formalización">
                        </div>
                    </div>
                </div>

                <!-- SECCIÓN: Cuota Bancaria -->
                <div class="card border-0 shadow-sm rounded-3 p-3 mb-3">
                    <h5 class="mb-2">Cuota Bancaria</h5>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Plazo (meses)</label>
                            <input type="number" id="plazoMeses" class="form-control" min="1" value="360">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">% Interés anual</label>
                            <input type="number" id="tasaInteres" class="form-control" min="0" step="0.01" value="7">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Cuota Mensual (automático)</label>
                            <input type="text" id="cuotaMensual" class="form-control" disabled placeholder="Se calculará automáticamente">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Ingreso Neto Familiar (mínimo requerido)</label>
                            <input type="text" id="ingresoNeto" class="form-control" disabled placeholder="Se calculará">
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex gap-2 justify-content-end">
                    <button type="button" id="generarPdfBtn" class="btn btn-outline-secondary">Generar Comprobante (PDF)</button>
                    <button type="button" id="enviarCorreoBtn" class="btn btn-outline-primary">Enviar por correo</button>
                    <button type="submit" id="registrarVentaBtn" class="btn btn-success">Registrar Venta</button>
                </div>

                <div id="formMessages" class="mt-3"></div>

            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>
    <script src="~/assets/js/ventas.js"></script>
}
