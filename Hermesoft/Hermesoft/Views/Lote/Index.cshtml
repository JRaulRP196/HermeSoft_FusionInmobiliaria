@{
    ViewBag.Title = "Lotes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HermeSoft_Fusion.Models.Mapa

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Listado de Lotes</h2>
        <p class="text-muted mb-0">Administra los lotes del sistema</p>
    </div>

    <div class="d-flex justify-content-between align-items-center gap-3">
        <a class="btn btn-primary btn-lg d-flex align-items-center" id="listadoLotes" asp-action="ListadoLotes">
            <span class="me-2 fw-bold">+</span> Listado
        </a>

        <button type="button"
                class="btn btn-primary btn-lg d-flex align-items-center"
                data-bs-toggle="modal"
                data-bs-target="#modalNuevoMapa">
            <span class="me-2 fw-bold">+</span> Agregar Mapa
        </button>
    </div>
</div>


<!-- Selector de Condominios -->
<div class="card border-0 shadow-sm rounded-4 mb-4 p-3">
    <div class="d-flex justify-content-center align-items-center gap-3">

        <!-- Botón Anterior -->
        <button id="btnPrevCondominio" class="btn btn-outline-primary rounded-pill px-3">
            <i class="fas fa-chevron-left"></i>
        </button>

        <!-- Nombre del Condominio -->
        <div class="flex-grow-1 text-center">
            <h4 id="nombreCondominio" class="fw-bold mb-0">Nombre Condominio</h4>
        </div>

        <!-- Botón Siguiente -->
        <button id="btnNextCondominio" class="btn btn-outline-primary rounded-pill px-3">
            <i class="fas fa-chevron-right"></i>
        </button>

    </div>
</div>

<div class="col-12">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">Mapa del Condominio</h4>
            <p class="card-title-dsec">Este es el mapa de los lotes.</p>
            <div id="map" style="height: 350px"></div>
        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>


<!-- Modal -->
<div id="miModalCentro" class="modal fade bs-example-modal-center" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Información del Lote</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <!-- Aquí meto la info dinámica -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNuevoMapa" tabindex="-1" aria-labelledby="modalNuevoMapaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNuevoMapaLabel">Nuevo mapa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Mapa" asp-action="Registro" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Condominio</label>
                            <select class="form-select" id="condominios" asp-for="condominio">

                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Imagen del Mapa</label>
                            <input type="file" class="form-control" accept="image/*" name="ImagenMapa">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar mapa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<select id="filtro" hidden>
    <option value="-1" hidden selected>Filtros</option>
</select>
@section scripts{
    <script src="~/assets/js/mapas.js"></script>
    <script src="~/assets/js/app.js"></script>
}