@using HermeSoft_Fusion.Models.Usuarios
@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HermeSoft_Fusion.Models.Usuarios.Usuario

<div class="container-fluid py-4">

    <!-- Título y botón principal -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Usuarios</h2>
            <p class="text-muted mb-0">Administra los accesos del sistema</p>
        </div>

        <button type="button"
                class="btn btn-primary btn-lg d-flex align-items-center"
                data-bs-toggle="modal"
                data-bs-target="#modalNuevoUsuario">
            <span class="me-2 fw-bold">+</span> Nuevo Usuario
        </button>
    </div>

    <!-- Filtros (solo diseño, sin lógica) -->
    <div class="card shadow-sm mb-4 border-0">
        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-danger">@TempData["MensajeError"]</div>
        }

        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success">@TempData["MensajeExito"]</div>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Usuario</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Usuario user in ViewBag.Usuarios)
                        {
                            <tr>
                                <td>@user.Nombre @user.Apellido1 @user.Apellido2</td>
                                <td>@user.Rol.Nombre</td>
                                @if (@user.Estado)
                                {
                                    <td>Activo</td>
                                }
                                else
                                {
                                    <td>Inactivo</td>
                                }
                                <td>@user.Correo</td>
                                <td>
                                    <button class="btn btn-light border-0 btn-editar"
                                            data-id="@user.IdUsuario">
                                        <i class="ri-pencil-line"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal: Nuevo Usuario -->
<div class="modal fade" id="modalNuevoUsuario" tabindex="-1" aria-labelledby="modalNuevoUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNuevoUsuarioLabel">Nuevo usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">

                <form asp-action="Agregar" method="post" class="needs-validation" novalidate>
                    <div class="row g-3">
                        
                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" asp-for="Nombre" placeholder="Nombre" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Primer Apellido</label>
                            <input type="text" class="form-control" asp-for="Apellido1" placeholder="Primero Apellido" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Segundo Apellido</label>
                            <input type="text" class="form-control" asp-for="Apellido2" placeholder="Segundo Apellido" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" asp-for="Correo" placeholder="correo@ejemplo.com" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Rol</label>
                            <select class="form-select" asp-for="IdRol" required>
                                @foreach (Rol rol in ViewBag.Roles)
                                {
                                    <option value="@rol.IdRol">@rol.Nombre</option>
                                }

                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <select class="form-select" asp-for="Estado" required>
                                <option value="true" selected>Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Contraseña temporal" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            Guardar usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Editar Usuario -->
<div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarUsuarioLabel">Editar usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Editar" method="post" class="needs-validation" novalidate>
                    <input type="hidden" id="IdUsuario" asp-for="IdUsuario" />
                    <input type="hidden" id="Correo" asp-for="Correo" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="Nombre" asp-for="Nombre" placeholder="Nombre" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Primer Apellido</label>
                            <input type="text" class="form-control" id="Apellido1" asp-for="Apellido1" placeholder="Primero Apellido" required>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Segundo Apellido</label>
                            <input type="text" class="form-control" id="Apellido2" asp-for="Apellido2" placeholder="Segundo Apellido" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Rol</label>
                            <select class="form-select" asp-for="IdRol" id="IdRol" required>
                                @foreach (Rol rol in ViewBag.Roles)
                                {
                                    <option value="@rol.IdRol">@rol.Nombre</option>
                                }

                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <select class="form-select" asp-for="Estado" id="Estado" required>
                                <option value="true" selected>Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            Guardar usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>
    <script src="~/assets/js/editarUsuario.js"></script>
}


@section Styles {
    <style>
        .avatar-img {
            width: 36px;
            height: 36px;
            object-fit: cover;
        }

        .badge-estado-activo {
            background-color: #d1f7e5;
            color: #118a55;
        }

        .badge-estado-inactivo {
            background-color: #ffe1e1;
            color: #b94a4a;
        }

        .badge-rol-admin {
            background-color: #ffe1e1;
            color: #b94a4a;
        }

        .badge-rol-ventas {
            background-color: #e0ebff;
            color: #3056d3;
        }
    </style>
}
