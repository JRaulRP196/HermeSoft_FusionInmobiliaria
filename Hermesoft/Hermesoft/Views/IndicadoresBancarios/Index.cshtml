@model IEnumerable<HermeSoft_Fusion.Models.Banco.IndicadoresBancarios>

@{
    ViewBag.Title = "Referencias Económicas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-0 shadow-sm rounded-4 p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">Indicadores</h4>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Referencia</th>
                <th>Valor</th>
                <th>Fecha Vigente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Nombre</td>
                    <td>%@r.PorcSeguro</td>
                    <td>@r.FechaVigente?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <small class="text-muted">Valores obtenidos desde el BCCR. No editables manualmente.</small>
</div>