@model IEnumerable<Banco>
@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="button-items">
    <a asp-action="Registro" class="btn btn-primary">Registrar un Nuevo Banco</a>
</div>

<div class="row g-3">
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">@TempData["MensajeError"]</div>
    }

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">@TempData["MensajeExito"]</div>
    }
    <div class="col-12">
        <h4 class="my-3">Listado de Bancos</h4>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">
                No hay bancos registrados.
            </div>
        </div>
    }
    else
    {
        @foreach (var banco in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card rounded-3">
                    @if (!string.IsNullOrEmpty(banco.Logo))
                    {
                        <img src="@banco.Logo" class="card-img-top rounded-4" alt="@banco.Nombre" />
                    }
                    else
                    {
                        <div class="card-img-top rounded-4 bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                            <i class="ri-bank-fill" style="font-size: 3rem; color: #6c757d;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h4 class="card-title">@banco.Nombre</h4>
                        <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@banco.IdBanco">Detalle</a>
                    </div>
                </div>
            </div>
        }
    }

</div>
