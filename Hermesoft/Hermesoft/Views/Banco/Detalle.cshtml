@model Banco
@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var endeudamientoBancos = ViewBag.Endeudamientos as List<EndeudamientoMaximo>;
    var segurosBancos = ViewBag.Seguros as List<SeguroBanco>;
    var escenariosBancos = ViewBag.Escenarios as List<EscenarioTasaInteres>;
}

<div class="container-fluid p-4">

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

    <!-- HEADER -->
    <div class="card border-0 shadow-sm rounded-4 mb-4 px-3 py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">@Model.Nombre</h4>
            <div>
                <a class="btn btn-outline-primary px-4 rounded-pill" asp-action="Editar" asp-route-id="@Model.IdBanco">
                    <i class="fas fa-edit me-2"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-light border px-4 rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i> Volver
                </a>
            </div>
        </div>
    </div>

    <!-- LOGO + INFO GENERAL -->
    <div class="row g-4 mb-4">

        <!-- LOGO -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100 d-flex align-items-center justify-content-center">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="@Model.Logo" class="img-fluid" style="max-height: 260px; object-fit: contain;" alt="@Model.Nombre" />
                }
                else
                {
                    <div class="d-flex flex-column align-items-center">
                        <i class="ri-bank-fill" style="font-size: 5rem; color: #6c757d;"></i>
                        <span class="mt-2 text-muted">Sin logo</span>
                    </div>
                }
            </div>
        </div>

        <!-- INFO GENERAL -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h3 class="fw-bold mb-3">Informaci&oacute;n General</h3>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Nombre:</div>
                    <div class="col-8">@Model.Nombre</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Enlace:</div>
                    <div class="col-8">
                        <a href="@Model.Enlace" target="_blank">@Model.Enlace</a>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Plazo M&aacute;ximo Cr&eacute;dito:</div>
                    <div class="col-8">@Model.MaxCredito a&ntilde;os</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Comisi&oacute;n:</div>
                    <div class="col-8">@Model.Comision%</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Honorarios Abogados:</div>
                    <div class="col-8">@Model.HonorarioAbogado%</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Tipo de Cambio:</div>
                    <div class="col-8">@Model.TipoCambio</div>
                </div>
            </div>
        </div>

    </div>

    <!-- PORCENTAJES DE ENDEUDAMIENTO -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h3 class="fw-bold mb-3">Porcentaje de Endeudamiento M&aacute;ximo por Tipo de Asalariado</h3>
                @if (endeudamientoBancos != null && endeudamientoBancos.Any())
                {
                    <div class="row">
                        @foreach (var endeu in endeudamientoBancos)
                        {
                            <div class="col-md-3 mb-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">@endeu.TipoAsalariado?.Nombre</h5>
                                        <p class="card-text display-6 fw-bold">@(endeu.PorcEndeudamiento == Math.Floor(endeu.PorcEndeudamiento) ? endeu.PorcEndeudamiento.ToString("0") : endeu.PorcEndeudamiento.ToString("0.##"))%</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No hay porcentajes de endeudamiento registrados.</div>
                }
            </div>
        </div>
    </div>

    <!-- SEGUROS -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h3 class="fw-bold mb-3">Seguros</h3>
                @if (segurosBancos != null && segurosBancos.Any())
                {
                    <div class="row">
                        @foreach (var seguro in segurosBancos)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">@seguro.Seguro?.Nombre</h5>
                                        <p class="card-text display-6 fw-bold">@(seguro.PorcSeguro == Math.Floor(seguro.PorcSeguro) ? seguro.PorcSeguro.ToString("0") : seguro.PorcSeguro.ToString("0.##"))%</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No hay seguros registrados.</div>
                }
            </div>
        </div>
    </div>

    <!-- ESCENARIOS DE TASAS DE INTERES -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h3 class="fw-bold mb-3">Tasas de Inter&eacute;s</h3>
                @if (escenariosBancos != null && escenariosBancos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nombre Escenario</th>
                                    <th>Tipo de Tasa</th>
                                    <th>Plazo (Meses)</th>
                                    <th>Porcentaje Adicional</th>
                                    <th>Indicador</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var escenario in escenariosBancos)
                                {
                                    <tr>
                                        <td>@escenario.Nombre</td>
                                        <td>@escenario.TasaInteres?.Nombre</td>
                                        <td>@escenario.Plazo</td>
                                        <td>@(escenario.PorcAdicional == Math.Floor(escenario.PorcAdicional) ? escenario.PorcAdicional.ToString("0") : escenario.PorcAdicional.ToString("0.##"))%</td>
                                        <td>
                                            @{ var porcFormat = escenario.PorcDatoBancario == Math.Floor(escenario.PorcDatoBancario) ? escenario.PorcDatoBancario.ToString("0") : escenario.PorcDatoBancario.ToString("0.##"); }
                                            @if (escenario.PorcDatoBancario > 0)
                                            {
                                                @:TBP (@porcFormat%)
                                            }
                                            else
                                            {
                                                @:N/A
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No hay escenarios de tasas de inter&eacute;s registrados.</div>
                }
            </div>
        </div>
    </div>

</div>
