@model Banco
@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid p-4">

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

    <!-- HEADER -->
    <div class="card border-0 shadow-sm rounded-4 mb-4 px-3 py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">@Model.Nombre</h4>
            <div>
                <a class="btn btn-outline-primary px-4 rounded-pill" asp-action="Editar" asp-route-id="@Model.IdBanco">
                    <i class="fas fa-edit me-2"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-light border px-4 rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i> Volver
                </a>
            </div>
        </div>
    </div>

    <!-- LOGO + INFO GENERAL -->
    <div class="row g-4 mb-4">

        <!-- LOGO -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100 d-flex align-items-center justify-content-center">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="@Model.Logo" class="img-fluid" style="max-height: 260px; object-fit: contain;" alt="@Model.Nombre" />
                }
                else
                {
                    <div class="d-flex flex-column align-items-center">
                        <i class="ri-bank-fill" style="font-size: 5rem; color: #6c757d;"></i>
                        <span class="mt-2 text-muted">Sin logo</span>
                    </div>
                }
            </div>
        </div>

        <!-- INFO GENERAL -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h3 class="fw-bold mb-3">Informacion General</h3>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Nombre:</div>
                    <div class="col-8">@Model.Nombre</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Enlace:</div>
                    <div class="col-8">
                        <a href="@Model.Enlace" target="_blank">@Model.Enlace</a>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Plazo Maximo Credito:</div>
                    <div class="col-8">@Model.MaxCredito anos</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Comision:</div>
                    <div class="col-8">@Model.Comision%</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Honorarios Abogados:</div>
                    <div class="col-8">@Model.HonorarioAbogado%</div>
                </div>

                <div class="row mb-2">
                    <div class="col-4 text-muted fw-semibold">Tipo de Cambio:</div>
                    <div class="col-8">@Model.TipoCambio</div>
                </div>
            </div>
        </div>

    </div>

    <!-- MENSAJE DE DATOS COMPLEMENTARIOS -->
    <div class="card border-0 shadow-sm rounded-4 p-4">
        <div class="text-center py-4">
            <i class="ri-information-line" style="font-size: 3rem; color: #6c757d;"></i>
            <h4 class="mt-3">Informacion Adicional Pendiente</h4>
            <p class="text-muted">
                Para mostrar los porcentajes de endeudamiento, seguros y tasas de interes, 
                es necesario implementar las tablas relacionadas en la base de datos y completar la informacion correspondiente.
            </p>
        </div>
    </div>

</div>
