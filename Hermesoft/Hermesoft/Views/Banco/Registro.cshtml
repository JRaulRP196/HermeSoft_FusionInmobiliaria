@model Banco
@{
    ViewBag.Title = "Bancos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var segurosCatalogo = ViewBag.SegurosCatalogo as List<Seguro>;
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Registro de Bancos</h4>
                <p class="card-title-desc">
                    En este apartado se podran registrar nuevos bancos completando el siguiente formulario.
                </p>

                @if (TempData["MensajeError"] != null)
                {
                    <div class="alert alert-danger">@TempData["MensajeError"]</div>
                }

                @if (TempData["MensajeExito"] != null)
                {
                    <div class="alert alert-success">@TempData["MensajeExito"]</div>
                }

                <form asp-controller="Banco" asp-action="Registro" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Nombre" class="form-label">Nombre del Banco</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Nombre del Banco" required>
                                <div class="valid-feedback">Excelente!</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Enlace" class="form-label">Enlace Web del Banco</label>
                                <input type="text" class="form-control" id="Enlace" name="Enlace" placeholder="Enlace Web del Banco" required>
                                <div class="valid-feedback">Excelente!</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="LogoFile" class="form-label">Logo del Banco</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" id="LogoFile" name="LogoFile" accept="image/*">
                                </div>
                                <div class="invalid-feedback">Ingrese un valor valido.</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="MaxCredito" class="form-label">Plazo Maximo de Credito</label>
                                <input type="number" class="form-control" id="MaxCredito" name="MaxCredito" placeholder="Plazo Maximo de Credito en Anos" required>
                                <div class="invalid-feedback">Ingrese un valor valido.</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="Comision" class="form-label">Comision Bancaria</label>
                                <input type="number" class="form-control" id="Comision" name="Comision" placeholder="%" required>
                                <div class="invalid-feedback">Ingrese un valor valido.</div>
                            </div>
                        </div>
                    </div>

                    <label class="form-label">Porcentaje de Endeudamiento Maximo</label>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Publico</div>
                                    <input type="number" class="form-control" placeholder="%" name="endeudamientoPublico">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Privado</div>
                                    <input type="number" class="form-control" placeholder="%" name="endeudamientoPrivado">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Profesional Independiente</div>
                                    <input type="number" class="form-control" placeholder="%" name="endeudamientoProfesional">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <div class="input-group">
                                    <div class="input-group-text">Trabajador Independiente</div>
                                    <input type="number" class="form-control" placeholder="%" name="endeudamientoIndependiente">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Seguros como Checkboxes -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Seguros Ofrecidos</label>
                            <p class="text-muted small">Seleccione los seguros que ofrece este banco:</p>
                            @if (segurosCatalogo != null && segurosCatalogo.Any())
                            {
                                <div class="row">
                                    @foreach (var seguro in segurosCatalogo)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="segurosSeleccionados" 
                                                       value="@seguro.IdSeguro" 
                                                       id="seguro_@seguro.IdSeguro">
                                                <label class="form-check-label" for="seguro_@seguro.IdSeguro">
                                                    @seguro.Nombre (@seguro.PorcSeguro%)
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">No hay tipos de seguros disponibles. Contacte al administrador.</div>
                            }
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label class="form-label">Gastos de Honorarios de Abogados</label>
                            <input type="number" class="form-control" placeholder="%" name="HonorarioAbogado" required>
                            <div class="valid-feedback">Excelente!</div>
                        </div>
                    </div>

                    <label class="form-label">Tasas de Interes</label>
                    <label class="form-label">Escenarios: </label>
                    <button type="button" class="btn btn-primary" id="addEscenario">+</button>
                    <div id="listaEscenarios">
                        <div class="row escenarios">
                            <div class="col">
                                <div class="card card-body">
                                    <h3 class="card-title">Escenario #1</h3>
                                    <div class="row">
                                        <div class="col-md-9">
                                            <label class="form-label">Tipo de Tasa de Interes</label>
                                            <select class="form-select tipoInteres" name="tipoTasa1" required>
                                                <option value="Tasa_Variable">Tasa Variable</option>
                                                <option value="Tasa_Escalonada">Tasa Escalonada</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Nombre del Escenario</label>
                                            <input type="text" class="form-control" placeholder="Nombre" name="nombreEscenario1">
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row inputsEscenario">
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Plazo de Duracion</label>
                                                <input type="number" class="form-control" placeholder="Meses" name="plazo1">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Porcentaje Adicional del Banco</label>
                                                <input type="number" class="form-control" placeholder="%" name="porcentajeAdicional1">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label class="form-label">Indicador Bancario</label>
                                                <select class="form-select" name="indicador1">
                                                    <option value="TBP">TBP</option>
                                                    <option value="SOFT">SOFT</option>
                                                    <option value="TPR">TPR</option>
                                                    <option value="N/A">N/A</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="button-items botonesEscalonada"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row escenarios" id="escenario-template" style="display:none;">
                        <div class="col">
                            <div class="card card-body">
                                <h3 class="card-title">Escenario #x</h3>
                                <button type="button" class="btn btn-danger waves-effect waves-light deleteEscenario">
                                    <i class="ri-close-line align-middle me-2"></i> Eliminar Escenario
                                </button>
                                <div class="row">
                                    <div class="col-md-9">
                                        <label class="form-label">Tipo de Tasa de Interes</label>
                                        <select class="form-select tipoInteres" name="tipoTasa">
                                            <option value="Tasa_Variable">Tasa Variable</option>
                                            <option value="Tasa_Escalonada">Tasa Escalonada</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Nombre del Escenario</label>
                                        <input type="text" class="form-control" placeholder="Nombre" name="nombreEscenario">
                                    </div>
                                </div>
                                <br />
                                <div class="row inputsEscenario">
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Plazo de Duracion</label>
                                            <input type="number" class="form-control" placeholder="Meses" name="plazo">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Porcentaje Adicional del Banco</label>
                                            <input type="number" class="form-control" placeholder="%" name="porcentajeAdicional">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Indicador Bancario</label>
                                            <select class="form-select" name="indicador">
                                                <option value="TBP">TBP</option>
                                                <option value="SOFT">SOFT</option>
                                                <option value="TPR">TPR</option>
                                                <option value="N/A">N/A</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="button-items botonesEscalonada"></div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="TipoCambio" class="form-label">Tipo de Cambio</label>
                        <input type="text" class="form-control" id="TipoCambio" name="TipoCambio" placeholder="Tipo de Cambio" required>
                    </div>

                    <div>
                        <div class="button-items">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>
    <script src="~/assets/js/escenariosbanco.js"></script>
}
